{
	"name": "Python 3",
	"build": {
	  "dockerfile": "Dockerfile.dev",
	  // Dockerfile のあるフォルダ（.devcontainer）ではなく、プロジェクトのルートをコンテキストにしたい場合は "../" を指定
	  "context": ".."
	},
	// VS Code 上で開くワークスペースフォルダ
	"workspaceFolder": "/workspaces/愛ちゃんポイント収集",
	// 必要に応じて拡張機能や設定を追記
	"features": {
		"ghcr.io/devcontainers/features/git:1": {}
	  },
	"postCreateCommand": "apt-get update && apt-get install -y openssh-client && rm -rf /var/lib/apt/lists/*",
	"extensions": [
	  "ms-python.python",
	  "ms-python.vscode-pylance",
	  "saoudrizwan.claude-dev",
	  "ms-toolsai.jupyter"
	]
  }